@model StreamDream.ViewModels.MovieViewModel
@{
    ViewBag.Title = "MoviesForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MoviesForm</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleasedOn)
        @Html.TextBoxFor(m => m.Movie.ReleasedOn, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m=>m.Movie.Id)
    <button class="btn btn-primary">Add</button>

}

